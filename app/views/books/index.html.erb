<p id="notice"><%= notice %></p>

<h1>町の本屋さん</h1>

<table>
  <thead>
    <tr>
      <th>書籍名</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= link_to '見る', book_path(id: book.id) %></td>
        <td><%= link_to '編集する', edit_book_path(book) %></td>
        <td><%= link_to '消す', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく本を作る', new_book_path %>
